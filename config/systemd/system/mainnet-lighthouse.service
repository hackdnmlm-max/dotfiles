[Unit]
Description=Mainnet-Lighthouse
After=network.target
StartLimitIntervalSec=0
PartOf=mainnet.target
Requires=mainnet-reth.service
Wants=mainnet-reth.service

[Service]
Type=simple
Restart=always
RestartSec=1
User=eth
Group=eth
UMask=0002
ExecStart=/usr/local/bin/mainnet lighthouse

[Install]
WantedBy=multi-user.target
